{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/images/*": ["public/images/*"],
            "@/fonts/*": ["public/fonts/*"],
            "@/videos/*": ["public/videos/*"],
            "@/components/*": ["src/components/*"],
            "@/layout/*": ["src/layout/*"],
            "@/hooks/*": ["src/hooks/*"],
            "@/pages/*": ["src/pages/*"],
            "@/styles/*": ["src/styles/*"],
            "@/redux/*": ["src/redux/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
